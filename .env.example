# Example env file. Copy to .env.local and fill values.

# Clerk (frontend + server)
NEXT_PUBLIC_CLERK_FRONTEND_API=your_clerk_frontend_api
CLERK_API_KEY=your_clerk_api_key

# Additional Clerk keys (publishable + secret)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://user:pass@localhost:5432/dbname

# Stripe subscription settings
STRIPE_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_PRICE_ID=price_your_subscription_price
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

INNGEST_API_KEY=inngest_key_here
INNGEST_EVENT_KEY=inngest_event_key_here

HOST_URL=http://localhost:3000

# Notes:
# - Do not commit .env.local containing real secrets. Use .env.example for reference.
# - For production, use environment variables provided by your hosting platform (Vercel, Railway, etc.).

# OpenAI (server-only)
OPENAI_API_KEY=your_openai_api_key_here
